    android:id="@+id/nav_graph"
    app:startDestination="@id/searchRepoFragment">

    <fragment
        android:id="@+id/searchRepoFragment"
        android:name="com.example.samplegithub.ui.main.SearchRepoFragment"
        android:label="search_repo_fragment"
